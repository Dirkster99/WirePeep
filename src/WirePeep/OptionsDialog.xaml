<m:ExtendedDialog x:Class="WirePeep.OptionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:m="http://menees.com/xaml"
        xmlns:local="clr-namespace:WirePeep"
        mc:Ignorable="d"
        Title="Options" Width="400" SizeToContent="Height" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<StackPanel Margin="8">
			<Label Content="_Log Folder:"/>
			<DockPanel>
				<Button Content="..." DockPanel.Dock="Right" Width="20" Margin="8,0,0,0" Click="SelectLogFolderClicked" TabIndex="1"/>
				<TextBox x:Name="logFolder" TabIndex="0"/>
			</DockPanel>
		</StackPanel>
		<StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
			<Button Content="_OK" Width="60" Margin="8,8,0,8" IsDefault="True" Click="OKClicked"/>
			<Button Content="_Cancel" Width="60" Margin="8" IsCancel="True"/>
		</StackPanel>
	</Grid>
</m:ExtendedDialog>
